/* 2019.08.11 start:军豪活动列表样式 */
.contain {
  text-align: center;
  display: fixed;
}
.list{
  width: 100%;
}
.left{
  width:15%;
  height: 150px;
  float: left;
}
.type{
  width: 100%;
  height: 100%;
}
.right{
  width: 80%;
  height: 150px;
  padding-left:20%;
  text-align:left;
}
.title{
  height:30px;
  font-weight:bold;
  font-size:15px;
}
.tip{
  height:30px;
}
.tip-info{
  float: left;
  font-size: 12px;
  color: #666;

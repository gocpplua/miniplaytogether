/* pages/activity/activity.wxss */
/**weui.wxss**/
@import '../../weui.wxss';
/* 横着的分割View样式 */
/*分割线样式*/
.divLine{
 background:#F0F0F0;
 width: 100%;
 height: 20rpx;
}


.placeholder{
    margin: 1px; /* 所有 4 个外边距都是 X px */
    padding: 0 20px;/* 上内边距和下内边距是 0px, 右内边距和左内边距是 20px*/
    text-align: center;/* 把文本排列到中间 */
    background-color: #09BB07;
    height: 2.3em;
    line-height: 2.3em;
    color: #0e0d0d;
}


.allavatarstype{
  padding: 2px;
  display: flex; 
  flex-direction: row ;/* row默认，属性值有row|row-reverse|column|column-reverse*/
  flex-wrap: wrap;  /* nowrap 默认，属性值有：nowrap | wrap | wrap-reverse */
}
.avatarstype{
  width: 30px; height: 30px;  
  background-color:  rgb(255, 255, 255);
  margin: 2px;
}

/*按钮固定到底部*/
.bottombtn {
  position: fixed;
  bottom: 0;
  width: 100%;
  }
